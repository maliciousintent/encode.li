@import('nib')

@font-face {
    font-family 'Colaborate'
    src url('../font/ColabThi-webfont.eot')
    src url('../font/ColabThi-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/ColabThi-webfont.woff') format('woff'),
         url('../font/ColabThi-webfont.ttf') format('truetype'),
         url('../font/ColabThi-webfont.svg#ColaborateThinRegular') format('svg')
    font-weight 200
    font-style normal
}

@font-face {
    font-family 'Colaborate'
    src url('../font/ColabLig-webfont.eot')
    src url('../font/ColabLig-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/ColabLig-webfont.woff') format('woff'),
         url('../font/ColabLig-webfont.ttf') format('truetype'),
         url('../font/ColabLig-webfont.svg#ColaborateLightRegular') format('svg')
    font-weight 300
    font-style normal
}

@font-face {
    font-family 'Colaborate'
    src url('../font/ColabMed-webfont.eot')
    src url('../font/ColabMed-webfont.eot?#iefix') format('embedded-opentype'),
         url('../font/ColabMed-webfont.woff') format('woff'),
         url('../font/ColabMed-webfont.ttf') format('truetype'),
         url('../font/ColabMed-webfont.svg#ColaborateMediumRegular') format('svg')
    font-weight 700
    font-style normal
}

_red = #BF3030

body
	font-family 'Colaborate', 'Helvetica', Arial, sans-serif
	font-weight 300
	font-size 16px
	-webkit-font-smoothing antialiased
	min-width 540px

h1, h2, h3, h4, h5, h6, b, strong
	font-weight 200

.navbar
	border-bottom 4px solid _red
	box-shadow 0 2px 2px rgba(#000, 0.2)

	.header
		p
			color #CCC
			font-weight 700
			font-size 20px
			margin-bottom 0
			margin-top 8px
			text-align center
			text-shadow 1px 1px 1px #FFF


.fullbar
	&.dark
		padding-top 60px
		padding-bottom 60px
		background url('../img/red-pattern.jpg') center center no-repeat #EEE
		background-size cover
		border-bottom 4px solid _red

		text-shadow 1px 2px 1px darken(_red, 40%)

		h1
			font-size 68px
			text-align center
			color #FFF
			margin-bottom 20px
		h2
			font-size 28px
			text-align center
			font-weight 300
			color #FFF

		b, strong
			font-weight 200

b, strong
	font-weight 700

.container
	width 500px !important
	padding-left 20px
	padding-right 20px

hr
	border none
	border-bottom 2px solid #EEE

a
	color darken(_red, 20%)
	font-weight 300
	&:hover
		color _red

img.drop
	width 32px
	height 32px

.span11
	p
		margin-top 5px
		margin-bottom 20px

textarea
	background #EEE
	height 150px
	resize vertical
	cursor text !important